# Database
DATABASE_URL="postgresql://user:password@host:port/database?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# App URL (for API security)
NEXT_PUBLIC_APP_URL="https://calendar-eight-beige.vercel.app"

# Google Analytics (GA4)
# Get your Measurement ID from: https://analytics.google.com/
# Format: G-XXXXXXXXXX (optional - leave empty to disable tracking)
NEXT_PUBLIC_GA_ID=""

# Google Analytics Property ID (for Realtime API)
# Format: properties/123456789 (get from GA Admin -> Property Settings -> Property Details)
GA_PROPERTY_ID=""

# Google Analytics Service Account Credentials (Base64 encoded)
# 1. Create Service Account: https://console.cloud.google.com/iam-admin/serviceaccounts
# 2. Download JSON key file
# 3. Encode to base64: cat service-account.json | base64 -w 0 (Linux/Mac) or [Convert]::ToBase64String([IO.File]::ReadAllBytes("service-account.json")) (PowerShell)
# 4. Add Service Account email to GA property (Admin -> Property Access Management)
GA_SERVICE_ACCOUNT_CREDENTIALS=""

# Cron Secret (for Vercel Cron Jobs)
# Vercel automatically sends: Authorization: Bearer ${CRON_SECRET}
# Generate with: openssl rand -base64 32 or use 1Password generator
CRON_SECRET="your-cron-secret-at-least-16-chars"

# Node Environment
NODE_ENV="production"
